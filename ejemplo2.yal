(* Definición de expresiones regulares comunes *)
let digit = [0-9]
let letter = [a-zA-Z]
let whitespace = [ \t\n\r]
let alphanumeric = letter | digit

(* Definición del punto de entrada y reglas *)
rule lexer [input] =
  'if'        { TOK_IF }
  | 'while'     { TOK_WHILE }
  | 'for'       { TOK_FOR }
  | digit+ '.' digit+ { TOK_FLOATCONST }
  | digit+         { TOK_INTCONST }
  | letter (alphanumeric|'_')* { TOK_IDENT }