(* Definición de expresiones regulares comunes *)
let digit = [0-9]
let letter = [a-zA-Z]
let whitespace = [ \t\n\r]
let alphanumeric = letter | digit
let cadena = "(letter|digit| )+"
(* Definición del punto de entrada y reglas *)
rule lexer [input] =
  'if'        { TOK_IF }
  | 'for'       { TOK_FOR }
  | digit+ ',' digit+ { TOK_FLOATCONST }
  | digit+         { TOK_INTCONST }
  | letter (alphanumeric|'_')*abc { TOK_IDENT }
  | cadena {TOK_CADENA}
  | whitespace     { skip }

